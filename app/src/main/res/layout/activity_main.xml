<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="500dp"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout">
        <TextView
                android:layout_gravity="center"
                android:text="@string/artistpizza_attendance"
                android:layout_margin="10dp"
                android:id="@+id/artistpizza"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView

                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/messageTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


        <TextView

                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/phoneTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>


    </LinearLayout>
    <Button
            android:visibility="invisible"
            android:text="가입하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>



    style="@style/Widget.AppCompat.Button.Borderless"</android.support.constraint.ConstraintLayout>